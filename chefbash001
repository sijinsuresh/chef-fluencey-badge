bash 'execute_bash_command' do
  code <<-EOH
    # Your Bash command(s) go here
    # ...
    echo "Hello, World!"
    echo "This is a Bash command"
  EOH
  action :run
  live_stream true
  notifies :run, 'ruby_block[save_output]', :immediately
end

# Ruby block to save the output to a node attribute
ruby_block 'save_output' do
  block do
    node.default['my_attribute'] = shell_out!('your_bash_command').stdout.strip
  end
  action :nothing
end
