require 'mixlib/shellout'

# Run multiple lines of Bash commands and capture the output
shell_out = Mixlib::ShellOut.new(<<-EOH)
  # Line 1 of Bash command
  echo "Hello, World!"

  # Line 2 of Bash command
  echo "This is another line"
EOH
shell_out.run_command
output = shell_out.stdout.strip

# Assign the output to a node attribute
node.default['my_attribute'] = output
