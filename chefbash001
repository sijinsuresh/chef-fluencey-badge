bash 'set_env_variables' do
  code <<-EOH
    export VAR1="value1"
    export VAR2="value2"
    export VAR3="value3"
  EOH
  notifies :run, 'ruby_block[store_variable]', :immediately
end

ruby_block 'store_variable' do
  block do
    node.default['my_cookbook']['var1_value'] = ENV['VAR1']
    node.default['my_cookbook']['var2_value'] = ENV['VAR2']
    node.default['my_cookbook']['var3_value'] = ENV['VAR3']
  end
  action :nothing
end

